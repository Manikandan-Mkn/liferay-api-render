# Use the official Liferay DXP image as the base image
FROM liferay/dxp:7.4.13-u80

# Copy your custom configurations (if any)
COPY configs/ /usr/local/liferay-ce-portal/

# Copy your modules, themes, and WAR files
COPY modules/*.jar /usr/local/liferay-ce-portal/deploy/
COPY wars/*.war /usr/local/liferay-ce-portal/deploy/

# Expose the default Liferay port
EXPOSE 8080

# Start Liferay
CMD ["catalina.sh", "run"]